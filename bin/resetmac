#!/bin/bash


local interface

if [ "$#" = "0" ]
then
    interface="wlp0s20f0u1" 
else
    interface="$1" 
fi

moni=$interface"mon" 

if [ -n "$(ifconfig | grep $moni)" ]
then
    airmon-ng stop $moni
fi

if [ -z "$(ifconfig | grep $interface)" ]
then
    return 1
fi

ifconfig $interface down
macchanger -p $interface
ifconfig $interface up
